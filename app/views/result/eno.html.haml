=link_to :"最古", result_eno_path(@creation_day, @id) unless @day_i == @creation_day
=link_to :"前日", result_eno_path(@day_i-1, @id) if @passed_day > 0
=link_to :"後日", result_eno_path(@day_i+1, @id) if @day_i < Day.last_day_i
=link_to :"最新", result_eno_path(nil, @id) unless @day_i == Day.last_day_i
.row-fluid
  #day.span12.well
    #{@passed_day}日目
- if @trains.present?
  .row-fluid
    #train.span12.well
      = render 'result_train'
- if @learns.present?
  .row-fluid
    #learn.span12.well
      = render 'result_learn'
- if @forgets.present?
  .row-fluid
    #forget.span12.well
      = render 'result_forget'
- if @blossoms.present?
  .row-fluid
    #blossom.span12.well
      = render 'result_blossom'
- if @moves.present?
  .row-fluid
    #move.span12.well
      = render 'result_move'
- if @party.present?
  .row-fluid
    #party.span12.well
      = render 'result_party'
.row-fluid
  #character_data.span12.well
    = render 'result_character_data'
