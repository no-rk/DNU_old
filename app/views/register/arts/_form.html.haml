= simple_form_for(register_art) do |form_art|
  = form_art.input :art_id, :as => :hidden
  != register_art.caption
  %br
  %br
  = register_art.updated_at.try(:to_s, :jp)
  = render 'register/error',     { :register_error => register_art }
  = render 'form_art_name',      { :register_art   => register_art, :form_art => form_art }
  = render 'form_art_pull_down', { :register_art   => register_art, :form_art => form_art }
  = render 'form_art_lv_effect', { :register_art   => register_art, :form_art => form_art }
  = render 'register/products/form_forge',      { :register_product => register_art, :form_product => form_art }
  = render 'register/products/form_supplement', { :register_product => register_art, :form_product => form_art }
  - unless @read_only
    .actions
      %button.btn.btn-large.btn-warning{"data-remote" => "true"} 確認する
      = form_art.submit :class => "btn btn-large btn-success"
  - if @update_time
    .actions
      = form_art.submit :class => "btn btn-large btn-warning"
