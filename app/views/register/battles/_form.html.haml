= simple_form_for(register_battle) do |form_battle|
  = register_battle.updated_at.try(:to_s, :jp)
  = render 'register/error',      { :register_error  => register_battle }
  = render 'form_battle_setting', { :register_battle => register_battle, :form_battle => form_battle }
  - unless @read_only
    .actions
      %button.btn.btn-large.btn-warning{"data-remote" => "true"} 確認する
      = form_battle.submit :class => "btn btn-large btn-success"
  - if @update_time
    .actions
      = form_battle.submit :class => "btn btn-large btn-warning"
