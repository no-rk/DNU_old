<%= form_initial.fields_for :init_job do |form_init_job| %><br />
  <%= form_init_job.label :job_id %>

  <% if @read_only %>
    <%= jobs[register_initial.init_job[:job_id]] if register_initial.init_job[:job_id] %>
  <% else %>
    <%= form_init_job.collection_select :job_id, GameData::Job.all, :id, :name, {:prompt => I18n.t("required_select", :scope => "register.message")}, :'data-url' => ajax_search_path(:job), :'data-remote' => true, :'data-type' => :json %>
  <% end %>

  <%= link_to ajax_search_path(:job) , :remote => true, :'data-type' => :json, :'data-params' => "id=#{register_initial.init_job[:job_id]}", :rel => "popover", :'data-trigger' => "manual" do %>
  <i class="icon-search"></i>
  <% end %>
<% end %>