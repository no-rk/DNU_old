<%= form_initial.fields_for :init_job do |form_init_job| %><br />
  <%= form_init_job.label :job_id %>

  <% if @read_only %>
    <%= jobs[register_initial.init_job[:job_id]] if register_initial.init_job[:job_id] %>
  <% else %>
    <%= form_init_job.select :job_id, jobs.invert, {:prompt => presence_select(register_initial.init_job,:job_id)}, :'data-url' => ajax_search_path(:jobs), :'data-remote' => true, :'data-type' => :json, :class => "span3" %>
  <% end %>

  <%= link_to ajax_search_path(:jobs) , :remote => true, :'data-type' => :json, :'data-params' => "id=#{register_initial.init_job[:job_id]}", :rel => "popover", :'data-trigger' => "manual" do %>
  <i class="icon-search"></i>
  <% end %>
<% end %>