- arts.count.times{register_initial.init_arts.build} if register_initial.init_arts.empty?
- i = 0
= form_initial.label :art
= form_initial.simple_fields_for :init_arts do |form_init_arts|
  - if @read_only
    = arts[i][:name]
    = arts[i][:attributes][register_initial.init_arts[i][:art_id]]
    = form_init_arts.hidden_field :art_id, :value => register_initial.init_arts[i][:art_id]
    %br
  - else
    = form_init_arts.input :art_id, :wrapper_html => { :class => 'form-inline' }, :label => arts[i][:name], :label_html => { :'data-help-path'=>ajax_search_path(:art_types), :'data-params'=>"id=#{arts[i][:id]}" }, :collection => arts[i][:attributes].invert, :input_html => { :'data-url' => ajax_search_path(:arts), :'data-remote' => true, :'data-params' => ("id=#{register_initial.init_arts[i][:art_id]}" if register_initial.init_arts[i][:art_id]), :'data-type' => :json, :'data-help-path' => ajax_search_path(:arts), :class => "span3" }
  - i += 1
