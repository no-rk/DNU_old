%br
= form_character.simple_fields_for :profile, :defaults => { :as => (:plain if @read_only), :user => current_user, :input_html => { :class => :'span6' } } do |form_profile|
  = form_profile.input :name, :input_html => { :class => :'string-editor span6' }
  = form_profile.input :nickname, :input_html => { :class => :'string-editor span6' }
  - unless defined? only_required
    = form_profile.input :race, :input_html => { :class => :'string-editor span6' }
    = form_profile.input :gender, :input_html => { :class => :'string-editor span6' }
    = form_profile.input :age, :input_html => { :class => :'string-editor span6' }
    = form_profile.input :introduction, :input_html => { :class => :'document-editor span9', :rows => 5 }
