= form_character.simple_fields_for :profile do |form_profile|
  %br
  - if @read_only
    = form_profile.label :name if register_character.profile.name.present?
    = register_character.profile.name
    = form_profile.label :nickname if register_character.profile.nickname.present?
    = register_character.profile.nickname
    = form_profile.label :race if register_character.profile.race.present?
    = register_character.profile.race
    = form_profile.label :gender if register_character.profile.gender.present?
    = register_character.profile.gender
    = form_profile.label :age if register_character.profile.age.present?
    = register_character.profile.age
    = form_profile.label :introduction if register_character.profile.introduction.present?
    = raw register_character.profile.introduction
  - else
    = form_profile.input :name        
    = form_profile.input :nickname    
    = form_profile.input :race        
    = form_profile.input :gender      
    = form_profile.input :age         
    = form_profile.input :introduction
