= simple_form_for(register_event) do |form_event|
  = form_event.input :event_content_id, :as => :hidden
  = register_event.updated_at.try(:to_s, :jp)
  = render 'register/error', { :register_error => register_event }
  = render 'form_purchase',  { :register_event => register_event, :form_event => form_event }
  - unless @read_only
    .actions
      %button.btn.btn-large.btn-warning{"data-remote" => "true"} 確認する
      = form_event.submit :class => "btn btn-large btn-success"
  - if @update_time
    .actions
      = form_event.submit :class => "btn btn-large btn-warning"
