= simple_form_for(register_message) do |form_message|
  = register_message.updated_at
  = render 'register/error',    { :register_error   => register_message }
  = render 'form_message_user', { :register_message => register_message, :form_message => form_message }
  - unless @read_only
    .actions
      %button.btn.btn-large.btn-warning{"data-remote" => "true"} 確認する
      = form_message.submit :class => "btn btn-large btn-success"
  - if @update_time
    .actions
      = form_message.submit :class => "btn btn-large btn-warning"
