= simple_form_for(register_skill) do |form_skill|
  = form_skill.input :skill_id, :as => :hidden
  = register_skill.updated_at.try(:to_s, :jp)
  = render 'register/error',  { :register_error => register_skill }
  = render 'form_skill_name', { :register_skill => register_skill, :form_skill => form_skill }
  - unless @read_only
    .actions
      %button.btn.btn-large.btn-warning{"data-remote" => "true"} 確認する
      = form_skill.submit :class => "btn btn-large btn-success"
  - if @update_time
    .actions
      = form_skill.submit :class => "btn btn-large btn-warning"
